{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/modules/**/controllers/*.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src/routes",
    "middleware": "express"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
